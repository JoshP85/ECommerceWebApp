@model ECommerceWebApp.ViewModels.ShoppingCartViewModel

@{
    ViewData["Title"] = "Cart";
}
<div>
    <h4>Shopping Cart</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CartId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CartId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountId)
        </dd>        
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.FirstName)
            @Html.DisplayFor(model => model.Account.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShoppingCartTotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShoppingCartTotalPrice)
        </dd>
    </dl>
    <hr />

    <table>
        <tr>
            <th>productId</th>
            <th>Title</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
        @foreach (var m in Model.CartItems)
        {

            <tr>
                <td>@m.Product.ProductId</td>
                <td>@m.Product.Name</td>
                <td>@m.Quantity</td>
                <td>@m.Product.Price</td>
                <td>@m.ShoppingItemTotalPrice</td>
                @*<td>@Html.ActionLink("Add to Cart", "AddToCart", "ShoppingCart", new { id = product.Id, price = product.Price}, null)</td>*@
            </tr>
        }

    </table>
    
</div>
